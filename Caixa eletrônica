#include <stdio.h>

int main() {
    float saldo = 1000, valor;
    int opcao;

    printf("1 - Ver saldo\n2 - Sacar\n3 - Depositar\nEscolha: ");
    scanf("%d", &opcao);

    if (opcao == 1) {
        printf("Saldo: R$ %.2f\n", saldo);
    } 
    else if (opcao == 2) {
        printf("Valor do saque: ");
        scanf("%f", &valor);
        if (valor <= saldo) {
            saldo -= valor;
            printf("Saque feito! Novo saldo: R$ %.2f\n", saldo);
        } else {
            printf("Saldo insuficiente!\n");
        }
    } 
    else if (opcao == 3) {
        printf("Valor do deposito: ");
        scanf("%f", &valor);
        saldo += valor;
        printf("Depósito feito! Novo saldo: R$ %.2f\n", saldo);
    } 
    else {
        printf("Opção inválida!\n");
    }

    return 0;
}
